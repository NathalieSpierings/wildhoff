<link rel="stylesheet" href="{{ 'component-pagination.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-pagination.css' | asset_url | stylesheet_tag }}</noscript>


{%- if settings.select_pagination == 'pagination' -%}	

  {%- if paginate.parts.size > 0 -%}
    {% capture previous_label %}
      <span class="pagination__navigation">
      <i class="feather-chevron-left"></i>
      <span class="sr-only">{{ 'general.pagination.previous' | t }}</span>
      </span>
    {% endcapture %}
    {% capture next_label %}
      <span class="pagination__navigation">
      <i class="feather-chevron-right"></i>
      <span class="sr-only">{{ 'general.pagination.next' | t }}</span>
      </span>
    {% endcapture %}
    <div class="pagination">
      {{ paginate | default_pagination: previous: previous_label, next: next_label }}
    </div>
  {%- endif -%}

{%- elsif settings.select_pagination == 'loadmore' -%}
    <a href="javascript:" id="LoadMoreProducts" class="collections__loadmore" title="Meer laden">
      {{ 'collections.general.load_more' | t }}
      <div class="lds-ellipsis">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </div>
    </a>

{%- endif -%}