<div class="content-search-toggle">
	<div class="close-search-toggle" data-close-search-toggle></div>
	<div class="contents-search">
		<div class="close-search" data-close-search-toggle></div>
		<div class="contents-search-top">
			<details-modal class="header__search">
				<div class="search-modal">
					<div class="search-modal__content" tabindex="-1">
						<predictive-search class="search-modals__form">
							<form action="{{ routes.search_url }}" method="get" role="search" class="search search-modal__form">
								<div class="content-input">
									<div class="field">
										<input type="hidden" name="type" value="product" />
										<input type="hidden" name="options[prefix]" value="last" />
										<input class="search__input field__input" name="q" value="" placeholder="{{ 'general.search.submit' | t }}..." aria-haspopup="listbox" aria-autocomplete="list" autocomplete="off" autocapitalize="off" spellcheck="false">
										<button class="search__button field__button" aria-label="{{ 'general.search.submit' | t }}">{{ 'general.search.submit' | t }}<i class="icon-search"></i></button>
									</div>
								</div>
								{%- if settings.menu_collection_search -%}
									<div class="content-menu-search">
										<div class="title">{{ settings.title_menu_collection_search }}</div>
										<ul class="list-collection">
										{%- for link in linklists[settings.menu_collection_search].links -%}
											<li><a href="{{ link.url }}">{{ link.title }}</a></li>
										{%- endfor -%}
										</ul>
									</div>
								{%- endif -%}
								<div class="predictive-search-content">
									<div class="predictive-search-content-product{% unless settings.show_search_blog %} full{% endunless %}" tabindex="-1" data-predictive-search>
										<div class="predictive-search__loading-state"></div>
									</div>
									{%- if settings.show_search_blog -%}
										<div class="predictive-search-content-blog" tabindex="-1" data-predictive-search-article>
											<div class="predictive-search__loading-state"></div>
										</div>	
									{%- endif -%}									
								</div>					
								<span class="predictive-search-status visually-hidden" role="status" aria-hidden="true"></span>
							</form>
						</predictive-search>
					</div>
				</div>
			</details-modal>
		</div>
	</div>
</div>
