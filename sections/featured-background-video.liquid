<section class="wpbingo-section wpbingo-section--background-video {{ section.settings.type_video }} wpbingo-section--{{ section.id }} overflow-hidden">
	<div class="{{ container }}" {{ max_width }}>
		<div class="wpbingo-section__inner">
			{%- for block in section.blocks -%}
				{%- case block.type -%}
					{%- when 'title' -%}
						{%- unless block.settings.title == blank -%}
							<h2 class="wpbingo-title heading-{{forloop.index}}">
								{{ block.settings.title }}
							</h2>
						{%- endunless -%}
					{%- when 'sub_title' -%}
						{%- unless block.settings.title == blank -%}
							<div class="wpbingo-sub-title subheading-{{forloop.index}}">
								{{ block.settings.title }}
							</div>
						{%- endunless -%}
					{%- when 'descrioption' -%}
						{%- unless block.settings.title == blank -%}
							<div class="wpbing-descrioption  descrioption-{{forloop.index}}" >
								{{ block.settings.title }}
							</div>
						{%- endunless -%}
					{%- when 'button' -%}
						{%- unless block.settings.title == blank -%}
							<div class="wpbingo-sub-btn button-{{forloop.index}}" >
								<a href="{{ block.settings.button_link }}" >
									{{ block.settings.title }}
								</a>
							</div>
						{%- endunless -%}
				{%- endcase -%}
			{%- endfor -%}
			{%- if section.settings.video != blank -%}
				<video playsinline="" loop="loop" autoplay="autoplay" muted="muted" src="{{ section.settings.video.sources.last.url }}"></video>
			{%- else -%}
				<video playsinline="" loop="loop" autoplay="autoplay" muted="muted" src="https://cdn.shopify.com/videos/c/vp/77f60ba99a344951b41e406dd141d634/77f60ba99a344951b41e406dd141d634.HD-1080p-3.3Mbps-11056304.mp4"></video>
			{%- endif -%}
		</div>
	</div>
</section>

